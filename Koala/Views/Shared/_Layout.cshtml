<body>
    <div class="navbar navbar-default navbar-fixed-top" style="padding-top:10px">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href='@Url.Action("Index", "Home")'>
                    <img id="koala-header" src="~/Content/Imagenes/koala-shop-header.png" />
                </a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav mr-auto">
                    @if (User.IsInRole(Koala.Models.KoalaRoles.UserCliente))
                    {
                        <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                        <li>@Html.ActionLink("Nosotros", "About", "Home")</li>
                        <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Productos", "Catalogo", "Productos")</li>
                        <li>@Html.ActionLink("Carrito", "Carrito", "Cart")</li>
                    }
                    else if (User.IsInRole(Koala.Models.KoalaRoles.UserAdmin))
                    {
                        <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                        <li>@Html.ActionLink("Nosotros", "About", "Home")</li>
                        <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Productos", "Catalogo", "Productos")</li>
                    }

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content" style="margin-top: 12px;">
        @RenderBody()
        <hr />
        <div class="footer">
            <div class="footerIzq">
                <a href='@Url.Action("Policy", "Home")'>
                    Condiciones
                </a>
                <br />
                <a href='@Url.Action("Contact", "Home")'>
                    Contacto
                </a>
                <br/>
                <a href='#'>
                    Preguntas frecuentes
                </a>
            </div>
            <div class="footerCentro">
                <p>&copy; @DateTime.Now.Year - The Koala Shop</p>
            </div>
            <div class="footerDrch">
                <img style="width:120%;" src="~/Content/Imagenes/17646657.png"/>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/js")
</body>
</html>
